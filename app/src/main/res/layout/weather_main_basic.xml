<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/weather_basic_info"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:background="@color/colorMainBackground">

    <TextView
        android:id="@+id/weather_basic_address"
        android:paddingTop="40dp"
        android:paddingLeft="28dp"
        android:text="地址"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/weather_basic_degree"
        android:paddingLeft="28dp"
        android:text="Wendu"
        android:textSize="24sp"
        android:layout_below="@id/weather_basic_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="天气"
        android:textSize="18sp"
        android:layout_below="@id/weather_basic_degree"
        android:paddingLeft="28dp"
        android:id="@+id/weather_basic_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:paddingTop="48dp"
        android:id="@+id/weather_basic_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:id="@+id/weather_basic_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <TextView
                android:text="风向"
                android:textSize="12sp"
                android:id="@+id/weather_basic_wind_dir"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="风向"
                android:id="@+id/weather_basic_wind_speed"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <TextView
                android:text="相对湿度"
                android:textSize="12sp"
                android:id="@+id/weather_basic_humidity"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="风向"
                android:id="@+id/weather_basic_humidity_value"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <TextView
                android:text="体感温度"
                android:textSize="12sp"
                android:id="@+id/weather_basic_degree_feeling"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="25"
                android:id="@+id/weather_basic_degree_feelingval"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:paddingTop="64dp"
        android:id="@+id/weather_basic_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>