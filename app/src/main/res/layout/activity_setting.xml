<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_setting_toolbar"
        app:navigationIcon="@drawable/ic_action_menu_back"
        app:title="设置"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        />

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <TextView
            android:layout_margin="8dp"
            android:text="基础设置"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:layout_height="20dp"
            android:background="@color/colorWhite"/>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorDivider"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="8dp"
                android:paddingLeft="12dp"
                android:text="自动定位"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"/>

            <Switch
                android:id="@+id/activity_setting_switch_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track"
                android:layout_weight="1"
                android:paddingRight="14dp"/>

        </LinearLayout>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorDivider"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <TextView
                android:layout_margin="8dp"
                android:paddingLeft="12dp"
                android:text="通知栏显示"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"/>

            <Switch
                android:id="@+id/activity_setting_switch_notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track"
                android:layout_weight="1"
                android:paddingRight="14dp"/>

        </LinearLayout>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorDivider"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="8dp"
                android:paddingLeft="12dp"
                android:text="自动更新"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"/>

            <TextView
                android:id="@+id/activity_setting_update_time"
                android:text="3小时"
                android:paddingLeft="12dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
            <ImageButton
                android:id="@+id/activity_setting_update_more"
                android:src="@drawable/menu_right_arrow"
                android:layout_gravity="center_vertical"
                android:background="@color/colorWhite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="14dp"/>

        </LinearLayout>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorDivider"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="8dp"
                android:paddingLeft="12dp"
                android:text="默认城市"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"/>

            <TextView
                android:id="@+id/activity_setting_city_default"
                android:text="合肥"
                android:paddingLeft="12dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
            <ImageButton
                android:id="@+id/activity_setting_city_more"
                android:src="@drawable/menu_right_arrow"
                android:layout_gravity="center_vertical"
                android:background="@color/colorWhite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="14dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>