<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/activity_weather_main_basic"
            layout="@layout/weather_main_basic">
        </include>
        <include
            android:id="@+id/activity_weather_main_three_days"
            layout="@layout/weather_main_three_days">
        </include>
        <include
            android:id="@+id/activity_weather_main_aqi"
            layout="@layout/weather_main_aqi">
        </include>
    </LinearLayout>

    <ImageView
        android:paddingTop="96dp"
        android:id="@+id/weather_main_anmi"
        android:src="@drawable/cloudy_day_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:id="@+id/tab_add_city"
            android:src="@drawable/ic_action_add"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            tools:ignore="RtlHardcoded"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/tab_pager_dot"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_icon_navigation"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/tab_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_menu"
            tools:ignore="RtlHardcoded"
            android:contentDescription=""/>
    </RelativeLayout>

</RelativeLayout>