<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDivider"
    tools:context=".activity.CityManagerActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_city_manager_toolbar"
        app:navigationIcon="@drawable/ic_action_menu_back"
        app:title="城市管理"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        >
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/activity_city_manager_title"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:visibility="gone">
        <Button
            android:id="@+id/activity_city_manager_cancel"
            android:text="取消"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_btn_transparent"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="选择城市"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"/>

        <Button
            android:id="@+id/activity_city_manager_commit"
            android:text="确定"
            android:textSize="12sp"
            android:background="@drawable/bg_btn_default"
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_city_manager_list"
        android:layout_below="@+id/activity_city_manager_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_city_manager_add"
        android:src="@drawable/ic_action_add_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:backgroundTint="@color/colorFloatingActionButtonBG"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>